{
  "name": "emsmediasystem",
  "version": "6.1.7",
  "description": "A simple media player",
  "main": "derived/src/main.min.mjs",
  "scripts": {
    "start": "make -j && electron .",
    "build": "make -j",
    "dist": "make -j && electron-builder",
    "dist-win": "make -j && electron-builder --win --publish=never",
    "dist-linux": "make -j && electron-builder --linux --publish=never",
    "dist-all": "make -j && concurrently \"electron-builder --win --publish=never\" \"electron-builder --linux --publish=never\"",
    "clean": "make clean"
  },
  "author": "Christian Lockley",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "concurrently": "^9.1.0",
    "csso": "^5.0.5",
    "electron": "^34.0.0",
    "electron-builder": "^26.1.0",
    "html-minifier-terser": "^6.0.0",
    "terser": "^5.43.1"
  },
  "dependencies": {
    "atem-connection": "^3.6.0",
    "bonjour": "^3.5.0",
    "hls.js": "^1.6.3",
    "write-file-atomic": "^6.0.0"
  },
  "build": {
    "appId": "com.ejaxmediasystem.app",
    "productName": "EMS Media System",
    "files": [
      "src/**/*",
      "fonts/**/*",
      "node_modules/**/*",
      "index.prod.html",
      "derived/**/*",
      "!index.html",
      "!**/*.map",
      "!build-artifacts",
      "!dist"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "src/icon.png",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    },
    "extraResources": [
      {
        "from": "src/main.css",
        "to": ""
      }
    ]
  },
  "packageManager": "yarn@4.7.0"
}
